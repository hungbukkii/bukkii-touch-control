{
  "name": "bukkii-assistive-touch",
  "version": "1.0.6",
  "description": "Bukkii Assistive Touch floating button for Window",
  "main": "main.js",
  "scripts": {
    "rebuild": "electron-rebuild",
    "postinstall": "electron-builder install-app-deps",
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.3.6"
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "robotjs": "^0.6.0"
  },
  "build": {
    "icon": "icon.ico",
    "productName": "Bukkii Assistive Touch",
    "asar": true,
    "asarUnpack": ["**/*.node"],
    "compression": "maximum",
    "appId": "com.bukkii.assistivetouch",
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "artifactName": "${productName}-${version}.${ext}",
      "createDesktopShortcut": true
    },

    "files": [
      "**/*",
      "!**/node_modules/*/.cache/**",
      "!**/test/**",
      "!**/tests/**",
      "!**/*.md",
      "!**/docs/**",
      "!**/.github/**",
      "!**/.vscode/**"
    ],
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "hungbukkii",
        "repo": "bukkii-touch-control"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hungbukkii/bukkii-touch-control.git"
  }
}
