{
  "name": "bukkii-assistive-touch",
  "version": "1.0.1",
  "description": "Bukkii Assistive Touch floating button for Window",
  "main": "main.js",
  "scripts": {
    "rebuild": "electron-rebuild",
    "postinstall": "electron-builder install-app-deps",
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "electron": "^39.2.7",
    "electron-builder": "^26.3.6"
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "robotjs": "^0.6.0"
  },
  "build": {
    "appId": "com.bukkii.assistivetouch",
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "artifactName": "${productName}-${version}.${ext}"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "hungbukkii",
        "repo": "bukkii-touch-control"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hungbukkii/bukkii-touch-control.git"
  }
}
